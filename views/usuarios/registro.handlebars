{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}

<h3>Crie sua conta</h3>
<div class="card">
    <div class="card-body">
        <form action="/usuarios/registro" method="post">
            <label for="nome" class="">Nome: </label>
                <input type="text" name="nome" class="form-control" required/>
            
            <label for="email">Email: </label>
                <input type="email" name="email" class="form-control" required/>
            
            <label for="senha">Senha:</label>
                <input type="password" name="senha" id="" class="form-control" required/>
            
            <label for="senha2">Confirme a senha:</label>
                <input type="password" name="senha2" id="" class="form-control" required/>
            
            <button type="submit" class="btn btn-primary mt-4">Criar Conta</button>
        </form>
    </div>
</div>