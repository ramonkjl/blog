<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" name="id" value="{{postagens._id}}"/>
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" value="{{postagens.titulo}}" class="form-control"/>

            <label for="">Slug: </label>
            <input type="text" name="slug" value="{{postagens.slug}}" class="form-control"/>

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" value="{{postagens.descricao}}" class="form-control"/>

            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control">{{postagens.conteudo}}</textarea>

            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select" >
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{/each}}
            </select>

            <br/>
            <button type="submit" class="btn btn-success">Editar Postar</button>
        </form>
    </div>
</div>