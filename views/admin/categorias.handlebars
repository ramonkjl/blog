<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add" > <button class="btn btn-success"> Nova Categoria </button> </a>

{{#each categorias}}

    <div class="card mt-4" >
        <div class="card-body" >
            <h4 style="color: black;" >{{nome}}</h4>
            <small>{{slug}}</small><br/>
            <small>Data de criação: {{date}}</small><br/>
            <a href="/admin/categorias/edit/{{_id}}" ><button  class="btn btn-success mt-4">Editar Categria</button></a>
           
            <form action="/admin/categoria/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}"/>
                <button type="submit" class="btn btn-danger mt-2">Deleter</button>
            </form>
        </div>
    </div>
{{else}}

{{/each}}