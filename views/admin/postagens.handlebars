<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagem/add" > <button class="btn btn-success"> Novo Post </button> </a>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>Título: {{titulo}}</h4>
        <small>Slug: {{slug}}</small>
        <p>Descrição: {{descricao}}</p>
        <p>Conteudo: {{conteudo}}</p>
        <small>Data: {{data}}</small>
        <br/>
        <small>Categoria: {{categoria.nome}}</small>
        <br/>
        <a href="/admin/postagem/edit/{{_id}}"><button type="submit" class="btn btn-primary">Editar</button></a>
        <a href="/admin/postagem/delete/{{_id}}"><button class="btn btn-danger">Deletar</button></a>
    </div>
</div>
{{/each}}